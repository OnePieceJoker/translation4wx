.topView {
  width: 100%;
  height: 150px;
  margin-top: 10px;
  background-color: #6495ED;
  position: relative;
}
.inputView {
  width: 80%;
  height: 30px;
  border: 1px solid #ADD8E6;
  border-top-left-radius: 20px;
  border-bottom-left-radius: 20px;
  margin-left: 4px;
  margin-top: 4px;
  background-color: white;
}

.inputView input {
  margin-left: 5px;
  margin-right: 5px;
  margin-top: 2px;
}

button {
  width: 50px;
  height: 30px;
  font-size: 11px;
  right: 4px;
  top: 2px;
  position: absolute;
  background-color: #6495ED;
  color: white;
}

.query {
  margin-left: 4px;
  margin-top: 10px;
}
.query text {
  color: white;
  font-size: 40px;
}

